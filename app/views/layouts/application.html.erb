<!DOCTYPE html>
<html>
  <head>
    <title>Crowdfunder</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if current_user %>
      <%= link_to "Home", root_path %> | Signed in as <%= current_user.name %> | <%= link_to "Logout", session_path("current"), :method => :delete %> |<%= link_to "Account", user_path(current_user) %>
    <% else %>
      <%= link_to "Home", root_path %> | <%= link_to "Log in", new_session_path  %> | <%= link_to "Sign up", new_user_path %>
    <% end %>
    <%= yield %>
  </body>
</html>
