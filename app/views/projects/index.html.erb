

<div id="slideshow">
<% @projects.each_with_index do |project, index| %>
  <% if index == 0 %>
    <div class="active" ><img class="slide-image" src="<%= project.url %>"></div>
  <% end %>

  <div class="img-container">
    <img class="slide-image" src="<%= project.url %>">
  </div>
<% end %>
</div>

<ul>
 <% @projects.reverse.each do |project| %>
  <div class="proj-container">
     <li >
        <p> <%= link_to project.name, project%></p>
        <p><%= project.date %></p>
        <img src="<%= project.url %>">
     </li>
 </div>
 <% end %>
</ul>
